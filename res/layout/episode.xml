<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_episode_selected"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/font_size_small" />
    <TextView
        android:id="@+id/episode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/episode_view_padding"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone" />
    <TextView
        android:id="@+id/podcast_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/episode_view_padding"
        android:textSize="@dimen/font_size_default"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/episode_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        android:visibility="gone" />
    <WebView
        android:id="@+id/episode_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />
    <TextView
        android:id="@+id/player_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/error_player"
        android:textColor="@color/text_error"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/episode_view_padding"
        android:paddingRight="@dimen/play_button_right_padding"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/player_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/divider_horizontal_bright"
            android:visibility="gone" />
        <TextView
            android:id="@+id/player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/font_size_default"
            android:visibility="gone" />
        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />
        <Button
            android:id="@+id/player_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item"
            android:drawableStart="@drawable/ic_media_pause"
            android:gravity="center"
            android:paddingRight="32dp"
            android:text="@string/pause"
            android:textColor="@drawable/button_label"
            android:textSize="@dimen/font_size_default" />
    </LinearLayout>
</LinearLayout>